{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    // PureScript
    {
      "isBackground": true,
      "group": "build",
      "type": "shell",
      "label": "Build app_purescript",
      "options": {
        "cwd": "${workspaceFolder}/app_purescript"
      },
      "command": "npm run build"
    },
    {
      "label": "Run app_purescript",
      "command": "nix",
      "args": [
        "develop",
        ".#app-purescript"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Docker run app_purescript",
      "command": "nix",
      "args": [
        "develop",
        ".#app-purescript-docker"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Docker remove app_purescript",
      "command": "nix",
      "args": [
        "develop",
        ".#app-purescript-docker-rm"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },

    // Python
    {
      "label": "Run app_python",
      "command": "nix",
      "args": [
        "develop",
        ".#app-python"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Docker run app_python",
      "command": "nix",
      "args": [
        "develop",
        ".#app-python-docker"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Docker remove app_python",
      "command": "nix",
      "args": [
        "develop",
        ".#app-python-docker-rm"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
  ]
}